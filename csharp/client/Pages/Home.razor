@page "/"
@using System.Security.Claims

@* <pagetitle>ByeByeRotten</pagetitle> *@

<div class="homepage-container">
    <section class="row">
        <div class="hero-card">
            <h1 class="header-title"><span class="highlight">ByeByeRotten</span></h1>
            <p class="header-subtitle">Discover recipes that make your life delicious and healthy.</p>
            <AuthorizeView Roles="Admin">
                <Authorized>
                    <NavLink href="/recipes" class="cta-button">Explore Recipes</NavLink>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView Roles="User">
                <Authorized>
                    <NavLink href="/week" class="cta-button">Explore Week</NavLink>
                </Authorized>
            </AuthorizeView>
        </div>
        
        <AuthorizeView>
            <Authorized>
                <div class="login-card">
                    <h2 class="login-title">Hello, Welcome Back!</h2>
                    <p>You are logged in as:</p>
                    <ul class="user-info-list">
                        @foreach (Claim claim in context.User.Claims)
                        {
                            <li>@claim.Type: <span class="user-info-value">@claim.Value</span></li>
                        }
                    </ul>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="login-card">
                    <h2 class="login-title">Welcome!</h2>
                    <p><NavLink href="login" class="cta-button">Login</NavLink> to unlock personalized features.</p>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </section>
    
    <!-- Featured Recipes Section -->
    <section class="recipes-section">
        <h2 class="section-title">Featured Recipes</h2>
        <div class="recipes-grid">
            <div class="recipe-card">
                <h3>Spaghetti Carbonara</h3>
                <p>A classic Italian pasta dish made with eggs, cheese, pancetta, and pepper.</p>
            </div>
            <div class="recipe-card">
                <h3>Vegetarian Tacos</h3>
                <p>Delicious tacos filled with fresh vegetables and topped with a tangy sauce.</p>
            </div>
            <div class="recipe-card">
                <h3>Chocolate Cake</h3>
                <p>A rich and moist chocolate cake perfect for any occasion.</p>
            </div>
        </div>
    </section>

    <!-- Recent Updates Section -->
    <section class="updates-section">
        <h2 class="section-title">Recent Updates</h2>
        <div class="updates-grid">
            <div class="update-card">
                <h3>New Recipe: Avocado Toast</h3>
                <p>Check out our latest recipe for a healthy and delicious avocado toast.</p>
            </div>
            <div class="update-card">
                <h3>Blog Post: Benefits of a Plant-Based Diet</h3>
                <p>Read our latest blog post on the benefits of incorporating more plant-based foods into your diet.</p>
            </div>
            <div class="update-card">
                <h3>Cooking Tips: How to Perfectly Cook Pasta</h3>
                <p>Learn the secrets to cooking pasta perfectly every time.</p>
            </div>
        </div>
    </section>
</div>

<style>
    .homepage-container {
        font-family: 'Roboto', Arial, sans-serif;
        color: #000000;
        background-color: #ffffff;
        padding: 40px 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        margin-top: 10px;
    }

    .row {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
    }

    .hero-card, .login-card {
        background-color: #f8f8f8; 
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        flex: 1;
    }

    .hero-card h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #4c51bf; 
        margin: 0 0 10px;
    }

    .hero-card p {
        font-size: 1.2rem;
        color: #000000;
        margin-bottom: 20px;
    }

    .highlight {
        color: #4c51bf; 
    }

    .cta-button {
        display: inline-block;
        background-color: #4c51bf;
        color: #ffffff;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .cta-button:hover {
        background-color: #3b4ea0;
    }

    .login-title {
        font-size: 1.5rem;
        font-weight: 500;
        color: #000000;
        margin-bottom: 10px;
    }

    .user-info-list {
        list-style: none;
        padding: 0;
        margin-top: 10px;
    }

    .user-info-list li {
        font-size: 1rem;
        margin: 5px 0;
    }

    .user-info-value {
        font-weight: 500;
        color: #4c51bf; 
    }

    /* Recipes Section */
    .recipes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .recipe-card {
        background-color: #f8f8f8; 
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .recipe-card h3 {
        font-size: 1.2rem;
        text-decoration: underline;
        margin-bottom: 10px;
    }

    .recipe-card p {
        font-size: 1rem;
        color: #000000;
    }

    /* Updates Section */
    .updates-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .update-card {
        background-color: #f8f8f8; 
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .update-card h3 {
        font-size: 1.2rem;
        text-decoration: underline;
        margin-bottom: 10px;
    }

    .update-card p {
        font-size: 1rem;
        color: #000000;
    }
</style>
